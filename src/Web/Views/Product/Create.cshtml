@model Web.ViewModels.ProductViewModel
@{
    ViewData["Title"] = "Добавить новый продукт";
}

<div class="esh-app-wrapper">
    <div class="container">
        <form asp-action="Create" asp-controller="Product">
            @*<div asp-validation-summary="All" class="text-danger"></div>*@
            <div class="form-group">
                <input type="hidden" asp-for="Id" />
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label">Категория</label>
                <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control">
                    <option selected="selected" disabled="disabled">Выберите категорию</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="CategoryTypeId" class="control-label">Подкатегория</label>
                <select asp-for="CategoryTypeId" asp-items="ViewBag.CategoryTypes" class="form-control">
                    <option selected="selected" disabled="disabled">Выберите подкатегорию</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Цена</label>
                <input type="number" placeholder="1.0" step="0.01" min="1" asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnitsInStock" class="control-label">Количество на складе</label>
                <input type="number" placeholder="1.0" step="1" min="1" asp-for="UnitsInStock" class="form-control" />
                <span asp-validation-for="UnitsInStock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PictureUri" class="control-label">Изображение (полный путь)</label>
                <input type="text" asp-for="PictureUri" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Описание</label>
                <input type="text" asp-for="Description" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>