@model Web.ViewModels.CategoryViewModel
@{
    ViewBag.Title = "Редактирование категории";
}
<div class="esh-app-wrapper">
    <div class="container">
        <form asp-action="ChangeName" asp-controller="Category">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" />
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label">Наименование</label>
                <input type="text" asp-for="Type" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>