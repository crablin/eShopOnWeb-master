@model Web.ViewModels.CatalogTypeViewModel
@{
    ViewBag.Title = "Создание подкатегории";
}
<div class="esh-app-wrapper">
    <div class="container">
        <form asp-action="CreateType" asp-controller="Category" >
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="categoryId" value="@ViewData["categoryId"]"/>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label">Наименование подкатегории</label>
                <input type="text" asp-for="Type" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>