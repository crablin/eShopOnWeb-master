@model Web.ViewModels.Users.EditUserViewModel
@{
    ViewBag.Title = "Редактирование пользователя";
}
<div class="esh-app-wrapper">
    <div class="container">
        <form asp-action="Edit" asp-controller="Users">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" />
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label">Фамилия</label>
                <input type="text" asp-for="FirstName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="SecondName" class="control-label">Имя</label>
                <input type="text" asp-for="SecondName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label">Логин</label>
                <input type="text" asp-for="UserName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <input type="text" asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label">Телефон</label>
                <input type="text" asp-for="PhoneNumber" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Country" class="control-label">Страна</label>
                <input type="text" asp-for="Country" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label">Город</label>
                <input type="text" asp-for="City" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Street" class="control-label">Улица</label>
                <input type="text" asp-for="Street" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="HomeNumber" class="control-label">Дом</label>
                <input type="number" placeholder="1.0" step="1" min="1" asp-for="HomeNumber" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Flat" class="control-label">Квартира</label>
                <input type="number" placeholder="1.0" step="1" min="1" asp-for="Flat" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>